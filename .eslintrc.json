{
  "root": true,
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},  
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },  
  "rules": {
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["off"],
    "max-len": ["error", { "code": 300 }],
    "no-nested-ternary": ["off"],
    "no-plusplus": ["off"],
    "no-underscore-dangle": ["off"]
  }
}
