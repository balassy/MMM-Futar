{
  "extends": "airbnb-base",
  "rules": {
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["off"],
    "max-len": ["error", { "code": 300 }],
    "no-nested-ternary": ["off"],
    "no-plusplus": ["off"],
    "no-underscore-dangle": ["off"]
  },
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	}
}
